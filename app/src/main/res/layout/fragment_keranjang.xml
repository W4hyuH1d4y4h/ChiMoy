<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.keranjang.KeranjangFragment">

    <TextView
        android:id="@+id/text_keranjang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="75px"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daftar Produk"
            android:textStyle="bold"
            android:layout_marginBottom="30px"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30px">

            <TextView
                android:id="@+id/produk1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Chickenroll"
                android:textStyle="bold"
                android:layout_marginBottom="10px"/>

            <TextView
                android:id="@+id/label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.10.000 x 2"
                android:layout_below="@id/produk1"
                android:textSize="30px"/>

            <TextView
                android:id="@+id/total1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.20.000"
                android:layout_alignTop="@id/label1"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30px">

            <TextView
                android:id="@+id/produk2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Siomay"
                android:textStyle="bold"
                android:layout_marginBottom="10px"/>

            <TextView
                android:id="@+id/label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.10.000 x 2"
                android:layout_below="@id/produk2"
                android:textSize="30px"/>

            <TextView
                android:id="@+id/total2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.20.000"
                android:layout_alignTop="@id/label2"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/garis"
            android:layout_width="350dp"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/totalHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total : Rp.30.000"
            android:textStyle="bold"
            android:layout_below="@id/garis"
            android:layout_marginStart="30dp"/>

        <Button
            android:id="@+id/btn_masukkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:backgroundTint="#FFDE00"
            android:text="Masukkan"
            android:layout_below="@id/totalHarga"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>